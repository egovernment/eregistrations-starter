#!/usr/bin/env node

'use strict';

var resolve    = require('path').resolve
  , resolveEnv = require('../scripts/resolve-env')
  , legacyPool = require('../scripts/legacy-pool');

resolveEnv(process.cwd()).done(function (env) {
	var conf = env.legacyPool !== false;

	if (!conf) throw new Error("No legacy pool allowed according to env.json");

	legacyPool(env.url, resolve(env.root, 'log', 'legacy-pool'));
});
