#!/usr/bin/env node

'use strict';

require('fs2/descriptors-handler')();

var i18nScan = require('mano/scripts/i18n-scan')

  , root, extraPackagesPaths = [];

root = process.cwd();
process.argv.forEach(function (val, index) {
	if (index > 1) {
		extraPackagesPaths.push(val);
	}
});

i18nScan(root, { i18nScannerExtraPackages: extraPackagesPaths }).done(function () {
	console.log("Successfully created i18n-scan-map.generated.json");
});
