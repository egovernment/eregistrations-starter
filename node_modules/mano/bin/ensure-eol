#!/usr/bin/env node

'use strict';

Error.stackTraceLimit = Infinity;

// Prevent EMFILE errors
require('fs2/descriptors-handler')();

require('../scripts/find-broken-eols')(process.cwd()).done(function (result) {
	if (!result.length) {
		console.log("No bad eol's found");
		return;
	}
	console.error("Found", result.length, "files with bad eol:\n" + result.join('\n') + '\n');
	process.exit(1);
});
