#!/usr/bin/env node

'use strict';

Error.stackTraceLimit = Infinity;

var deferred    = require('deferred')
  , generateApp = require('eregistrations/scripts/generate-app')
  , resolve     = require('path').resolve

  , root = resolve(__dirname, '..');

deferred(
	generateApp(root, 'users-admin'),
	generateApp(root, 'meta-admin'),
	generateApp(root, 'user'),
	generateApp(root, 'business-process-submitted')
).done(function () {
	console.log("Following applications were generated: \"users-admin\", \"meta-admin\", \"user\" " +
		"and \"business-process-submitted\".\n\nFollow README.md for next steps");
});
